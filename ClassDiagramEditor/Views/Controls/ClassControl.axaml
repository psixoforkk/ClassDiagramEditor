<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ClassDiagramEditor.Views.Controls">
  <Design.PreviewWith>
    <controls:ClassControl />
  </Design.PreviewWith>

  <Style Selector="controls|ClassControl">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Name="ClassControl" Height="160" Width="120" Background="Transparent">
			  <Rectangle Width="120" Height="160" Stroke="Black" StrokeThickness="3">
				  <Rectangle.RenderTransform>
					  <TranslateTransform X="0" Y="0"/>
				  </Rectangle.RenderTransform>
			  </Rectangle>
			  <Grid Width="120" RowDefinitions="20, 70, 70" ColumnDefinitions="*">
				  <TextBlock  Grid.Row="0" Text="Hello" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				  <ListBox BorderBrush="Black" BorderThickness="1" Margin="5" Grid.Row="1" >
				  </ListBox>
				  <ListBox BorderBrush="Black" BorderThickness="1" Margin="5" Grid.Row="2" >
				  </ListBox>
			  </Grid>
		  </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
